<%= form_for @address do |f| %>
  <%= f.label :line_1, "Address, line 1" %>
  <%= f.text_field :line_1 %><br>

  <%= f.label :line_2, "Address, line 2" %>
  <%= f.text_field :line_2 %><br>

  <%= f.label :city %>
  <%= f.text_field :city %><br>

  <%= f.label :state %>
  <%= f.text_field :state %><br>

  <%= f.label :zip %>
  <%= f.text_field :zip %><br>
  <br>

  <%= f.submit %>
<% end %>
