<h1>Routes for <%= link_to @user.full_name, user_path(@user) %></h1>

<ul>
  <% @routes.each do |route| %>
    <li>
      <%= link_to route.name, route_path(route) %>
      <ul>
        <li>Origin: <%= link_to route.origin.to_s, address_path(route.origin) %></li>
        <li>Destination: <%= link_to route.destination.to_s, address_path(route.destination) %></li>
      </ul>
    </li>
  <% end %>
</ul>

<%= link_to "New route", new_route_path %>
